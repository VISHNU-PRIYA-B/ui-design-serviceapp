    color: '#111827',
  },
  statusChip: {
    alignSelf: "flex-start",
    paddingVertical: 8,
    paddingHorizontal: 16,
    borderRadius: 20,
    marginTop: 16,
    marginBottom: 8,
  },
  statusText: { 
    fontSize: 14,
  },
  sectionTitle: {
    marginTop: 24,
    fontSize: 20,
    marginBottom: 16,
  },
  line: {
    height: 1,
    backgroundColor: "#E5E7EB",
    marginBottom: 16,
  },
  row: {
    flexDirection: "row",
    justifyContent: "space-between",
    paddingVertical: 12,
    alignItems: 'flex-start',
  },
  itemDetails: {
    flex: 1,
  },
  itemName: { 
    fontSize: 16,
    color: '#111827',
    marginBottom: 4,
  },
  subText: { 

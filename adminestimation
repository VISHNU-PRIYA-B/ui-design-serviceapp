    marginLeft: 12,
  },
  totalRow: {
    flexDirection: "row",
    justifyContent: "space-between",
    borderTopWidth: 1,
    borderColor: "#D1D5DB",
    paddingTop: 16,
    marginTop: 16,
  },
  totalLabel: { 
    fontSize: 20,
  },
  totalAmount: { 
    fontSize: 20,
  },
  updateBtn: {
    backgroundColor: "#3ff7ba",
    paddingVertical: 16,
    borderRadius: 16,
    marginTop: 24,
  },
  updateBtnText: {
    textAlign: "center",
    fontSize: 17,
    color: "#111827",
  },
  errorBox: { 
    marginTop: 40, 
    alignItems: "center",
    backgroundColor: '#fff',
    padding: 32,
    borderRadius: 24,
    marginHorizontal: 24,
  },
  errorText: {
    fontSize: 16,
    color: '#111827',
  },
});
